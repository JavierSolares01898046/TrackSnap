<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeFragment"
    android:background="#29292B">


    <ImageView
        android:id="@+id/circleYellow"
        android:layout_width="150dp"
        android:layout_height="172dp"
        android:layout_marginEnd="296dp"
        android:layout_marginBottom="228dp"
        android:src="@drawable/yellowcircle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/circlePurple"
        android:layout_width="242dp"
        android:layout_height="147dp"
        android:layout_marginStart="232dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/bluecircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circlePink"
        android:layout_width="242dp"
        android:layout_height="493dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="484dp"
        android:src="@drawable/pinkcircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circleRed"
        android:layout_width="231dp"
        android:layout_height="454dp"
        android:layout_marginEnd="188dp"
        android:layout_marginBottom="500dp"
        android:src="@drawable/redcircle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/circleGreen"
        android:layout_width="158dp"
        android:layout_height="326dp"
        android:layout_marginStart="368dp"
        android:layout_marginTop="220dp"
        android:src="@drawable/greencircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/circleBlue"
        android:layout_width="155dp"
        android:layout_height="248dp"
        android:layout_marginEnd="530dp"
        android:layout_marginBottom="560dp"
        android:src="@drawable/darkblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageView
        android:id="@+id/circleOrange"
        android:layout_width="171dp"
        android:layout_height="377dp"
        android:layout_marginEnd="400dp"
        android:layout_marginBottom="850dp"
        android:src="@drawable/orangecircle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="200dp"
        android:layout_height="142dp"
        android:layout_marginTop="324dp"
        android:src="@drawable/randomlogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_txtview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/lexend_bold"
        android:gravity="center"
        android:text="@string/homescreen_title_txt"
        android:textColor="@color/white"
        android:textSize="70sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="500dp"
        android:text="@string/login_txt"
        android:fontFamily="@font/lexend_bold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="350dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/signup_txt"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>