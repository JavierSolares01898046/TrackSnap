<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.83"
        android:background="@color/black"
        tools:context=".ProfileFragment">




    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/settings_button_description"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


<!--    </androidx.cardview.widget.CardView>-->

    <TextView
            android:id="@+id/username_txtview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WELCOME"
            android:fontFamily="@font/jacques_francois_shadow"
            android:textColor="@color/lavender"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@id/default_user_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <!--  Guideline to split the screen into two halves  -->

    <ImageView
            android:id="@+id/default_user_img"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:src="@drawable/defaultuser"
            android:layout_marginTop="20dp"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/username_txtview" />

    <View
        android:id="@+id/rectangleView1"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/w"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_user_img" />

    <TextView
        android:id="@+id/profile_bio_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="180dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/jacques_francois_shadow"
        android:text="BIO"
        android:textColor="@color/lavender"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangleView1" />

    <View
        android:id="@+id/rectangleView2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_bio_txtview" />

    <!--  The second half of the screen  -->
    <TextView
        android:id="@+id/user_bio_txtview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="192dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/julius_sans_one"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangleView2" />

    <View
        android:id="@+id/rectangleView3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_user_img" />

    <TextView
        android:id="@+id/profile_page_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="148dp"
        android:fontFamily="@font/jacques_francois_shadow"
        android:text="@string/profile_txt"
        android:textColor="@color/lavender"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangleView3" />


    <Button
        android:id="@+id/moviesWatched_btn"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_margin="20dp"
        android:background="@drawable/golden_border"
        android:text="@string/movies_watched_txt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="431dp" />

    <Button
        android:id="@+id/watchlist_btn"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_margin="20dp"
        android:background="@drawable/golden_border"
        android:text="@string/watchlist_txt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/moviesWatched_btn" />

    <Button
        android:id="@+id/reviews_btn"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_margin="20dp"
        android:background="@drawable/golden_border"
        android:text="@string/reviews_txt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/watchlist_btn" />

    <Button
        android:id="@+id/friends_btn"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_margin="20dp"
        android:background="@drawable/golden_border"
        android:text="@string/friends_txt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reviews_btn" />

    <Button
        android:id="@+id/home_movie_btn"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_margin="20dp"
        android:background="@drawable/golden_border"
        android:text="MOVIE HOME"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/friends_btn" />


    </androidx.constraintlayout.widget.ConstraintLayout>
