<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="0.83"
    android:background="@color/black"
    tools:context=".ProfileFragment">

    <View
        android:id="@+id/bioBorder"
        android:layout_width="438dp"
        android:layout_height="387dp"
        android:background="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:id="@+id/settingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:contentDescription="@string/settings_button_description"
        android:src="@drawable/baseline_settings_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--  Guideline to split the screen into two halves  -->

    <TextView
        android:id="@+id/username_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:fontFamily="@font/lexend_bold"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/default_user_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.728" />

    <ImageView
        android:id="@+id/default_user_img"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="480dp"
        android:src="@drawable/defaultuser"
        app:layout_constraintBottom_toBottomOf="@+id/bioBorder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/rectangleView1"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_user_img" />


    <TextView
        android:id="@+id/profile_bio_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/lexend_bold"
        android:text="BIO"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangleView1"
        app:layout_constraintBottom_toTopOf="@id/rectangleView2"
        />


    <View
        android:id="@+id/rectangleView2"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_bio_txtview" />

    <!--  The second half of the screen  -->


    <TextView
        android:id="@+id/user_bio_txtview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/bioBorder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangleView2"
        app:layout_constraintVertical_bias="1.0" />

    <View
        android:id="@+id/rectangleView3"
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:layout_marginTop="4dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/default_user_img" />

    <TextView
        android:id="@+id/profile_page_txtview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/lexend_bold"
        android:text="@string/profile_txt"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/moviesWatched_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/moviesWatched_btn"
        android:layout_width="253dp"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:background="@color/black"
        android:fontFamily="@font/lexend_semibold"
        android:text="@string/movies_watched_txt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.018"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.613" />

    <Button
        android:id="@+id/watchlist_btn"
        android:layout_width="253dp"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:layout_marginStart="16dp"
        android:background="@color/black"
        android:text="@string/watchlist_txt"
        android:fontFamily="@font/lexend_semibold"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/moviesWatched_btn" />

    <Button
        android:id="@+id/reviews_btn"
        android:layout_width="253dp"
        android:layout_height="61dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:fontFamily="@font/lexend_semibold"
        android:text="@string/reviews_txt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/watchlist_btn" />

    <Button
        android:id="@+id/friends_btn"
        android:layout_width="253dp"
        android:layout_height="61dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:fontFamily="@font/lexend_semibold"
        android:text="@string/friends_txt"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviews_btn" />

    <Button
        android:id="@+id/home_movie_btn"
        android:layout_width="109dp"
        android:layout_height="49dp"
        android:layout_margin="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="MOVIE HOME"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/user_bio_txtview" />


</androidx.constraintlayout.widget.ConstraintLayout>
